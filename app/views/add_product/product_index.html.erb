<body>

      <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Logo and responsive toggle -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               
            </div>
            <!-- Navbar links -->
            <div class="collapse navbar-collapse" id="navbar">
                <ul class="nav navbar-nav">
                    <li>
                        <%= link_to("home", {:controller => 'add_product', :action => 'product_index'}) %>                    </li>
                                 
 <li>
                    <%= link_to("order status",:controller => "add_product", :action => "orderstatus") %>
 </li> 
 <li>
                    <%= link_to("log out",:controller => "credentials", :action => "logout") %>
 </li> 
       
                 <!--   <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Services <span class="caret"></span></a>
                        <ul class="dropdown-menu" aria-labelledby="about-us">
                            <li><a href="#">Engage</a></li>
                            <li><a href="#">Pontificate</a></li>
                            <li><a href="#">Synergize</a></li>
                        </ul>
                    </li>-->
                </ul>

                <!-- Search -->
                <%= form_tag({:action => 'search_index'} , {class: "navbar-form navbar-right"}) do %>
                                    <div class="form-group">
                                        <%= text_field_tag(:search, nil, class: "form-control") %>
                                    </div>)
                
                    <%= submit_tag("Search", class: "btn btn-default") %>
                
                
                <% end %>

            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

  <div class="jumbotron feature" style="background-color: yellowgreen;">
    <div class="container" >
      <h1>Mera Brand</h1>
      <p> Create your OWN Brand.</p>
    </div>
  </div>

    <!-- Content -->
    <div class="container">
         <% if !flash[:notice].blank? %> 
        <div class="notice" style="color: red">
        <%= flash[:notice] %>
        </div>
        <% end %>
        <!-- Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"><h1>Trending Brands</h1>
            
            
            
   
        </div>
        

        <div class="row">
        <% @brands.each do |b| %>
            <h2> <%= link_to(b.brand_name, {:controller => 'add_product', :action => 'that_brand_products', :bid => b.id }) %></br></h2>
            <div class="col-lg-12">
         <% b.products.order("order_count desc").limit(3).each do |p| %>
            <article class="col-md-4 article-intro">
        
                    <%= image_tag p.image.url(:thumb), style: 'height : 300px'  ,:class => "img-responsive img-rounded" %>
               
              <h3>Name: <%= p.product_name %></h3>
              <h3>type: <%= p.product_type %></h3>
               <h3>Price: Rs.<%= p.product_price %></h3>
               <h3><%= link_to("Order", {:action => 'order', :pid => p.id, :cid => @customer.id}) %>
 
                </h3>



            </article>
        <% end %>
</div>
        <% end %>

        <%= will_paginate @brands %>
        </div>
         
   
                  
    </div>
    <!-- /.container -->

           
  <footer>
    <div class="footer-blurb"> 
        <div class="small-print">
          <div class="container">
            <p><a href="#">Terms &amp; Conditions</a> | <a href="#">Privacy Policy</a> | <a href="#">Contact</a></p>
            <p>Copyright &copy; Example.com 2015 </p>
          </div>
        </div>
  </footer>

    <!-- jQuery -->
    <script src="js/jquery-1.11.3.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>
  
  <!-- IE10 viewport bug workaround -->
  <script src="js/ie10-viewport-bug-workaround.js"></script>
  
  <!-- Placeholder Images -->
  <script src="js/holder.min.js"></script>
  
</body>

</html>




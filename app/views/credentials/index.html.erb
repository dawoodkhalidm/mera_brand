                <h1><%= @b.brand_name %></h1>
                <h2>Orders pending</h2>
                <% if @b.orders.present? %>
                    <% @b.orders.each do |o| %>
                         
                         <% if o.status == "pending" %>
                         <article class="col-md-4 article-intro">
                         <% @p = Product.find_by_id(o.product_id) %>
                         
                         <%= image_tag @p.image.url(:thumb), style: 'height : 300px'  ,:class => "img-responsive img-rounded" %>

                           <h3>
                             Name: <%= @p.product_name %>
                           </h3>
                           <h3>
                             Required: <%= o.order_quantity %>
                           </h3>
                            <% @c = Customer.find_by_id(o.customer_id) %>
                            <h3>By : <%= @c.first_name %></h3>
                             <h3>
                                <%= link_to("Accept", {:action => 'accept',:id => o.id}) %> | <%= link_to("Reject", {:action => 'reject',:id => o.id}) %>                   
                         
                             </h3>

                            <% else %>
                               <h4>No orders</h4>
                                <% end %> 
                                        

                           </article>
                       <% end %>
               <% else %>
                           <h4>No orders</h4>

                         <% end %>   
                    



